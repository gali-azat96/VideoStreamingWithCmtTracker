<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.galiazat.diplomtest4opencvimplement.screen.videoSource.VideoSourceActivity">

    <com.galiazat.diplomtest4opencvimplement.custom.VideoSourcePreviewView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:show_fps="true"
        android:id="@+id/java_camera_view"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/seekbar_value"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:text="63"
        android:textSize="30sp"
        android:textColor="#ea125e"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/menu_button"
        android:src="@drawable/ic_menu"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:clipToPadding="false"
        android:id="@+id/supported_formats_list"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#C3C0C0"/>

</android.support.constraint.ConstraintLayout>
